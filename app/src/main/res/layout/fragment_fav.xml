<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:id="@+id/fav_fragment"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.onyx.onyx.ui.layout.TopTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:tabTextColor="@color/Indicator_tabTextColor"
        android:background="@color/bg_color"
        custom:tabSelectedTextColor="@color/Indicator_tabSelectedTextColor"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        custom:tabIndicatorColor="@color/tabIndicator_color"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        app:tabTextAppearance="@style/MyMenuTextAppearance"
        android:letterSpacing=".08" />
    <!--<android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fav_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="@integer/google_play_services_version"
        >-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color">
    </android.support.v4.view.ViewPager>
    <!--
    </android.support.v4.widget.SwipeRefreshLayout>
    -->

</LinearLayout>
