<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:visibility="visible"
    tools:context="com.example.onyx.onyx.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/mainbackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/grantText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:text="Need Location Access"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <ImageButton
            android:id="@+id/mainContactsButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/mainMapButton"
            android:adjustViewBounds="true"
            android:background="#fd8e8c"
            android:elevation=" -A"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/phonebook" />

        <ImageButton
            android:id="@+id/mainMapButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:adjustViewBounds="true"
            android:background="@color/deep_purple_100"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/map" />

        <ImageButton
            android:id="@+id/mainVoiceButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:adjustViewBounds="true"
            android:background="#9cdeed"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/voicecall" />
    </LinearLayout>

</RelativeLayout>
